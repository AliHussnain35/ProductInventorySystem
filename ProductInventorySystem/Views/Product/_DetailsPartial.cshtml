@model ProductInventorySystem.Models.Product

<div class="mb-3">
    <h5 class="fw-bold">Product Details</h5>
    <dl class="row">
        <dt class="col-sm-4">Name</dt>
        <dd class="col-sm-8">@Model.ProductName</dd>
        <dt class="col-sm-4">Price</dt>
        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-4">Category</dt>
        <dd class="col-sm-8">@Model.Category?.CategoryName</dd>
    </dl>
</div>
